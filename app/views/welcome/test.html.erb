<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <div class = "well">
      <h1>Welcome To <%= @weather_hash["location"] %>!</h1>
      <div class = "row">
        <div class = "col-md-7">
          <p><em>What's the weather like?</em></p>
          <p>
              Temperature is: <%= @weather_hash["temp_f"] %>° F / <%= @weather_hash["temp_c"] %>° C 
          </p>
          <p>
              Feels like: <%= @weather_hash["real_feel"] %>° F
          </p>
        </div>    
        <div class = "col-md-5">
            <p>
            <%= @weather_hash["weather_words"] %> <%= image_tag @weather_hash["weather_icon"] %> 
            </p>
            <p>
            <%=link_to "Full Forecast", @weather_hash["forecast_link"], target: "_blank" %>
            </p>
        </div>
      </div>
    </div>
  </div>    
</div>
